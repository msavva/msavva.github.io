
<h3>News</h3>
<hr>
<p>
<% if @news_limit: %>
  <% @topnews = @news.slice(0, @news_limit) %>
  <% for n in @topnews: %>
    <div class="row">
      <div class="col-xs-2"><%= n.date %></div>
      <div class="col-xs-10"><%- n.description %></div>
    </div>
  <% end %>
  <a href="news.html">More...</a>
<% end %>
</p>
